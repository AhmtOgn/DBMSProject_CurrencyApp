@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CurrencyApp</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #f8f9fa; }
        .navbar { box-shadow: 0 2px 4px rgba(0,0,0,.1); }
        .card { border: none; box-shadow: 0 2px 4px rgba(0,0,0,.05); }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-money-bill-trend-up"></i> CurrencyApp
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @* Sadece Giriş Yapmış Kullanıcılar Görebilir *@
                    @if (HttpContextAccessor.HttpContext?.Session.GetInt32("UserId") != null)
                    {
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Wallet" asp-action="Index">My Wallets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Market" asp-action="Index">Markets</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Transaction" asp-action="Index">Transactions</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Bank" asp-action="Index">Bank Operations</a>
                            </li>
                            
                            @if (HttpContextAccessor.HttpContext.Session.GetString("UserRole") == "Admin")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-warning fw-bold" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                </li>
                            }
                        </ul>

                        @* --- DÜZELTİLEN KISIM BAŞLANGICI --- *@
                        <ul class="navbar-nav">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown">
                                    <i class="fa-solid fa-user"></i> @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                            <i class="fa-solid fa-user-pen"></i> Edit Profile
                                        </a>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="fa-solid fa-right-from-bracket"></i> Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        @* --- DÜZELTİLEN KISIM BİTİŞİ --- *@
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5 py-3 text-center">
        <div class="container">
            &copy; 2025 - CurrencyApp - DBMS Project
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>