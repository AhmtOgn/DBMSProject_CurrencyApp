@model List<CurrencyApp.Models.Transaction>
@using CurrencyApp.Models

@{
    ViewData["Title"] = "Transaction History";
}

    <div class="container mt-4">
        <h2 class="fw-bold mb-4"><i class="fa-solid fa-clock-rotate-left text-warning"></i> Transaction History</h2>
    
        <div class="card mb-4 p-3 bg-light">
        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-3">
                    <label>Operation Type</label>
                    <select name="searchType" class="form-select">
                        <option value="">All</option>
                        <option value="Deposit">Deposit</option>
                        <option value="Withdrawal">Withdrawal</option>
                        <option value="Buy">Buy</option>
                        <option value="Sell">Sell</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label>Start Date</label>
                    <input type="date" name="startDate" class="form-control" />
                </div>
                <div class="col-md-3">
                    <label>End Date</label>
                    <input type="date" name="endDate" class="form-control" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fa-solid fa-magnifying-glass"></i> Search
                    </button>
                </div>
            </div>
        </form>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0 align-middle">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Operation</th>
                        <th>Details (Sent <i class="fa-solid fa-arrow-right"></i> Received)</th> <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (item.OperationType == OperationType.Buy) {
                                        <span class="badge bg-success"><i class="fa-solid fa-arrow-down"></i> BUY</span>
                                    }
                                    else if (item.OperationType == OperationType.Sell) {
                                        <span class="badge bg-danger"><i class="fa-solid fa-arrow-up"></i> SELL</span>
                                    }
                                    else if (item.OperationType == OperationType.Deposit) {
                                        <span class="badge bg-primary"><i class="fa-solid fa-plus"></i> DEPOSIT</span>
                                    }
                                    else if (item.OperationType == OperationType.Withdrawal) {
                                        <span class="badge bg-warning text-dark"><i class="fa-solid fa-minus"></i> WITHDRAW</span>
                                    }
                                </td>
                                
                                <td>
                                    @if (item.TargetAmount != null && item.TargetAmount > 0)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="text-danger fw-bold me-2">
                                                -@item.Amount.ToString("N2") <small>@item.CurrencyCode</small>
                                            </div>
                                            <i class="fa-solid fa-arrow-right text-muted mx-2"></i>
                                            <div class="text-success fw-bold ms-2">
                                                +@item.TargetAmount?.ToString("N2") <small>@item.TargetCurrencyCode</small>
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">
                                            @item.Amount.ToString("N2") <small>@item.CurrencyCode</small>
                                        </span>
                                    }
                                </td>

                                <td>
                                    @if(item.TransactionStatus == ProcessStatus.Completed)
                                    {
                                        <span class="text-success"><i class="fa-solid fa-check-circle"></i> Completed</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@item.TransactionStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">No transaction history found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>