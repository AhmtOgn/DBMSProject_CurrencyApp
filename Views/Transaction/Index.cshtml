@model List<CurrencyApp.Models.Transaction>

@{
    ViewData["Title"] = "Transaction History";
}

<div class="container mt-4">
    <h2 class="fw-bold mb-4"><i class="fa-solid fa-clock-rotate-left text-warning"></i> Transaction History</h2>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover table-striped mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Date</th>
                        <th>Operation</th>
                        <th>Amount</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                                <td>
                                    @if (item.OperationType == OperationType.Buy) {
                                        <span class="badge bg-success"><i class="fa-solid fa-arrow-down"></i> BUY</span>
                                    }
                                    else if (item.OperationType == OperationType.Sell) {
                                        <span class="badge bg-danger"><i class="fa-solid fa-arrow-up"></i> SELL</span>
                                    }
                                    else if (item.OperationType == OperationType.Deposit) {
                                        <span class="badge bg-primary"><i class="fa-solid fa-plus"></i> DEPOSIT</span>
                                    }
                                    else {
                                        <span class="badge bg-secondary">@item.OperationType</span>
                                    }
                                </td>
                                <td class="font-monospace fw-bold">
                                    @item.Amount.ToString("N2") 
                                </td>
                                <td>
                                    @if(item.TransactionStatus == ProcessStatus.Completed)
                                    {
                                        <span class="text-success"><i class="fa-solid fa-check"></i> Completed</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">@item.TransactionStatus</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">No transaction history found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>